---
import { testimonials } from "../../const";
import Testimonial from "../Testimonial.astro";
import SectionContainer from "./SectionContainer.astro";
import SectionTitle from "./SectionTitle.astro";
---

<SectionContainer extraClass="space-y-8">
  <SectionTitle>
    Praises <span class="text-theme">& Endorsements</span>
  </SectionTitle>
  <div
    class="flex flex-wrap justify-center sm:space-x-4 space-y-8 max-w-[1024px] mx-auto"
  >
    {testimonials.map((testimonial) => <Testimonial {...testimonial} />)}
  </div>
</SectionContainer>
